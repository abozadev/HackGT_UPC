<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jordi.food" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Info"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name=".ActivityForResult.ManageLikes"
            android:label="@string/title_activity_manage_likes" >
        </activity>
        <activity
            android:name=".ActivityForResult.ManageDislikes"
            android:label="@string/title_activity_manage_dislikes" >
        </activity>
        <activity
            android:name=".ShowDailyDishes"
            android:label="@string/title_activity_show_daily_dishes" >
        </activity>
    </application>

</manifest>
